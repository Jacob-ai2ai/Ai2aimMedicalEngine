# Supabase Configuration
# Get these from your Supabase project settings: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Builder.io Configuration
# Get your API key from: https://builder.io/account/organization
NEXT_PUBLIC_BUILDER_API_KEY=your-builder-api-key-here

# AI/LLM Configuration
# OpenAI API Key (for AI agents and RAG)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-key-here

# Anthropic API Key (alternative to OpenAI)
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your-anthropic-key-here

# Google Gemini API Key (alternative AI provider)
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-key-here

# SERP API (for web search capabilities)
# Get from: https://serpapi.com/manage-api-key
SERP_API_KEY=your-serp-api-key-here

# Redis Configuration (for rate limiting and caching)
# Upstash Redis: https://console.upstash.com/
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-token-here

# Sentry Configuration (for error tracking)
# Get from: https://sentry.io/settings/
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn-here
SENTRY_AUTH_TOKEN=your-sentry-auth-token-here
SENTRY_ORG=your-org-slug
SENTRY_PROJECT=your-project-slug

# Email Configuration (SendGrid)
# Get from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=your-sendgrid-api-key-here
EMAIL_FROM=noreply@yourdomain.com

# Twilio Configuration (for SMS notifications)
# Get from: https://console.twilio.com/
TWILIO_ACCOUNT_SID=your-account-sid-here
TWILIO_AUTH_TOKEN=your-auth-token-here
TWILIO_PHONE_NUMBER=+1234567890

# Security Configuration
# Generate a random secret for CSRF tokens: openssl rand -base64 32
CSRF_SECRET=your-random-csrf-secret-here

# Session Configuration
# Generate a random secret: openssl rand -base64 32
SESSION_SECRET=your-random-session-secret-here

# Application Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Rate Limiting Configuration
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Logging Configuration
LOG_LEVEL=info
ENABLE_DEBUG_LOGS=false

# Feature Flags
ENABLE_AI_AGENTS=true
ENABLE_AUTOMATIONS=true
ENABLE_RAG=true
ENABLE_REALTIME=true
ENABLE_ROBOT_API=false

# MCP Server Configuration (Model Context Protocol)
MCP_SERVER_URL=http://localhost:8080
MCP_SERVER_API_KEY=your-mcp-api-key-here

# FHIR Integration (for EHR/EMR)
FHIR_SERVER_URL=https://your-fhir-server.com
FHIR_CLIENT_ID=your-fhir-client-id
FHIR_CLIENT_SECRET=your-fhir-client-secret

# E-Prescribing (Surescripts)
SURESCRIPTS_API_URL=https://api.surescripts.com
SURESCRIPTS_CLIENT_ID=your-client-id
SURESCRIPTS_CLIENT_SECRET=your-client-secret

# PDMP Integration (Prescription Drug Monitoring)
PDMP_API_URL=https://your-state-pdmp-api.com
PDMP_API_KEY=your-pdmp-api-key

# Monitoring & Analytics
VERCEL_ANALYTICS_ID=your-vercel-analytics-id
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Database Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
